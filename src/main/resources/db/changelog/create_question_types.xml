<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Refer to https://docs.liquibase.com/change-types/community/create-table.html -->

    <changeSet id="1ab402e5-585f-475e-b42d-5f973b517a2b" author="nicolas.penagos" failOnError="true">
        <createTable tableName="question_types">
            <column name="question_type_id" type="UUID">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="question_type" type="varchar(255)" />
            <column name="question_id" type="UUID" >
                <constraints primaryKey="true" nullable="false" references="questions(question_id)" foreignKeyName="fk-question-type"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>


